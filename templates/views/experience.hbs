{{!< default}}
<div class="container">
		<h1 class="text-center">My Experience</h1>

		<div id="jobs-container">
				<h3 class="experience-subheader">Jobs</h3>
				{{#each data.jobs}}
				<div class="job">
						<div class="top">
								<h3 class="company">{{company}}</h3>
								<h4 class="title">{{title}}</h4>
								<p class="dates">{{displayStartDate}} - {{displayEndDate}}</p>
						</div>
						<div class="bottom">
								<div class="summary">{{{summary}}}</div>
						</div>
				</div>
				{{/each}}
		</div>

		<div id="education-container">
				<h3 class="experience-subheader">Education</h3>
				{{#each data.education}}
				<div class="education">
						<div class="top">
								<h3 class="school">{{school}}</h3>
								<h4 class="degree">{{degree}} - {{major}}</h4>
								<p class="dates">{{displayStartDate}} - {{displayEndDate}}</p>
						</div>
						<div class="bottom">
								<div class="summary">{{{summary}}}</div>
						</div>
				</div>
				{{/each}}
		</div>

		<a href="/files/Craig_Schwartz_Resume.pdf" id="download-resume" download>Download resume as a PDF</a>
</div>
