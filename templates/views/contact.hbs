<div class="container">
		{{#if messageSubmitted}}
		<h3 class="success-message">Thanks for getting in touch.</h3>
		{{/if}}
		<h1 class="text-center">Contact Me</h1>
		<form id="contact-form" method="post">
				<input type="hidden" name="action" value="contact">
				<div class="form-group {{#if validationErrors.messageType}}has-error{{/if}}">
						<div class="text-center">If you're interested in working together, use the form below to tell me about your project, or just say hello!</div>
						<div id="message-type-group">
								{{#each messageTypes}}
								<input id="{{value}}" class="message-type-radio" type="radio" name="messageType" value="{{value}}" />
								<label for="{{value}}" class="message-type-label no-select">
										{{label}}
								</label>
								{{/each}}
						</div>
				</div>
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}" placeholder="Name">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<input type="email" name="email" class="form-control" value="{{formData.email}}" placeholder="Email">
				</div>
				<div class="form-group">
						<input type="text" name="phone" placeholder="Phone Number (optional)" class="form-control" value="{{formData.phone}}">
				</div>
				<div class="form-group {{#if validationErrors.body}}has-error{{/if}} ">
						<label>Message</label>
						<textarea name="body" placeholder="Leave me a message..." rows="4" class="form-control">{{formData.body}}</textarea>
				</div>
				<div class="form-actions">
						<button type="submit" class="btn btn-primary">Send</button>
				</div>
		</form>
</div>
